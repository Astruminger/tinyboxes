!!!
%html
  %head
    %title Tinyboxes
    %meta{:content => "Unicef", :property => "og:title"}
    %meta{:content => "http://www.unicef.org", :property => "og:url"}
    %meta{:content => "", :property => "fb:admins"}
    %meta{:content => "", :property => "fb:app_id"}
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'jquery', 'rails', 'application'
    = csrf_meta_tag
    = javascript_tag %(window.fbAppId = '#{FB_APP_ID}')
    %body
      =# render :partial => 'shared/sidebar'
      #wrapper
        - if logged_in?
          %p
            logged in as
            = current_user.name
        - else
          = link_to 'Login', login_path, :remote => true
        = yield
        = yield :bottom
      %fb:login-button
      -#{:onlogin => "facebook_onlogin();"}
      #fb-root
      / Facebook
      %script{:src => "http://connect.facebook.net/en_US/all.js"}
      