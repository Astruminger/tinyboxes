!!!
%html
  %head
    %title Tinyboxes
    %meta{:content => "Unicef", :property => "og:title"}/
    %meta{:content => "website", :property => "og:type"}/
    %meta{:content => "http://www.unicef.org", :property => "og:url"}/
    %meta{:content => "http://www.unicef.org/images/fb_logo.png", :property => "og:image"}/
    %meta{:content => "", :property => "fb:admins"}
      %meta{:content => "", :property => "fb:app_id"}/
      = stylesheet_link_tag :all
      = javascript_include_tag 'jquery', 'application'
      = csrf_meta_tag
    %body
      =# render :partial => 'shared/sidebar'
      #wrapper
        = yield
        = yield :bottom
      #fb-root
      / Facebook
      %script{:src => "http://connect.facebook.net/en_US/all.js"}
      :javascript
        FB.init({
          appId  : #{Facebook::APP_ID},
          status : true,
          cookie : true,
          xfbml  : true
        });
        var flag = document.createElement('div');
        flag.id = "fb_ready_flag";
        document.getElementById('fb-root').appendChild(flag);

